<div class="row" style="-ms-grid-column-align: center ">
    @if(Model != null){


        foreach (Animal animais in Model)
        {
            <div class="card mb-3">
                <div><b>@animais.NomeAnimal</b></div>
                <div class="card bg-light mb-3" style="max-width: 25rem; display: block">
                    <img id="fotoAnimal" src="~/Images/@animais.Imagem" /><br />
                </div>

                <ul class="list-group list-group-flush" style="align-self: center">
                    <li class="list-group-item">
                        <b id=Data style="margin-right: 2px">@animais.DataCadastro.ToShortDateString()</b>
                        <a href='@Url.Action("DetalhesAnimal", "Home", new { id = animais.AnimalId })'><img style="width: 90px" src="~/Content/img/detalhes.png" /></a>
                    </li>
                </ul>
            </div>
        }
    }
</div>

<script>
    $('#Data').val(dataAtualFormatada);
    function dataAtualFormatada() {
        var data = new Date();
        var dia = data.getDate();
        if (dia.toString().length == 1)
            dia = "0" + dia;
        var mes = data.getMonth() + 1;
        if (mes.toString().length == 1)
            mes = "0" + mes;
        var ano = data.getFullYear();
        return dia + "/" + mes + "/" + ano;
    }
</script>

