@using CadeMeuPet.Models
@model List<Comentario>
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="width: 96%">
    <table class="table table-hover">
        <tr class="table-secondary">
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Data da mensagem</th>
            <th scope="col">Conteúdo da mensagem</th>
            <th scope="col">Nome do pet</th>
            <th scope="col">Remover</th>
        </tr>
        @if (Model != null)
        {
            foreach (Comentario comentarios in Model)
            {
                if (comentarios != null)
                {
                <tr class="table-primary">
                    <td>@comentarios.NomeComentario</td>
                    <td>@comentarios.EmailComentario</td>
                    <td>@comentarios.DataComentario</td>
                    <td style="overflow: auto;">@comentarios.Mensagem</td>
                    <td>@comentarios.Animal.NomeAnimal</td>
                    <td>@Html.ActionLink("Remover", "RemoverComentario", "Comentario", new { id = comentarios.idComentario }, new { @class = "btn btn-primary" })</td>
                </tr>
                 }
             }
        }
    

    </table>
</div>

