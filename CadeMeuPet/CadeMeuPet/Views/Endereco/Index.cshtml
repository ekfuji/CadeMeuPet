@using CadeMeuPet.Models
@model List<Endereco>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br/>
<div>
    <table class="table table-hover">
        <tr class="table-secondary">
            <th scope="col">Logradouro</th>
            <th scope="col">CEP</th>
            <th scope="col">Editar</th>
            <th scope="col">Remover</th>
        </tr>

        @foreach (Endereco endereco in Model)
        {
            <tr class="table-primary">
                <td>@endereco.Logradouro</td>
                <td>@endereco.CEP</td>
                <td>@Html.ActionLink("Alterar", "AlterarEndereco", "Endereco", new {id = endereco.EnderecoId}, new {@class = "btn btn-primary"})</td>
                <td>@Html.ActionLink("Remover", "RemoverEndereco", "Endereco", new {id = endereco.EnderecoId}, new {@class = "btn btn-primary"})</td>
            </tr>
        }

    </table>
    @Html.ActionLink("Cadastrar", "CadastrarEndereco", "Endereco", null, new { @class = "btn btn-success" })
</div>

