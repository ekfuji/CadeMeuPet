@using CadeMeuPet.Models
@model List<Porte>

@{
    ViewBag.Title = "Porte Index";
}


<hr />

<div>
    <table class="table table-hover">
        <tr class="table-secondary">
            <th scope="col">Tamanho</th>
            <th scope="col">Editar</th>
            <th scope="col">Remover</th>
        </tr>

        @foreach (Porte portes in Model)
        {
            <tr class="table-primary">
                <td>@portes.Tamanho</td>
                <td>@Html.ActionLink("Alterar", "AlterarPorte", "Porte", new { id = portes.PorteId }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Remover", "RemoverPorte", "Porte", new { id = portes.PorteId }, new { @class = "btn btn-primary" })</td>
            </tr>
        }

    </table>
    @Html.ActionLink("Cadastrar","CadastrarPorte","Porte",null, new { @class = "btn btn-success"})
</div>



