@using CadeMeuPet.Models
@model List<Animal>
@{
    ViewBag.Title = "ListaAnimaisUsuario";
}

<div class="jumbotron" style="width: 1000px">
    <table class="table table-hover">
        <tr class="table-secondary">
            <th scope="col">Foto</th>
            <th scope="col">Nome</th>
            <th scope="col">Data Postagem</th>
            <th scope="col">Ver Postagem</th>
            <th scope="col">Desbloquear Post</th>
            <th scope="col">Bloquear Post</th>
            <th scope="col">Status da Postagem</th>
        </tr>
        @if (Model != null)
    {
        foreach (Animal animal in Model)
        {
            if (animal.Situacao == 1)
            {
                <tr class="table-primary">
                    <td><img src="~/Images/@animal.Imagem" style="width: 100px; height: 100px" /></td>
                    <td>@animal.NomeAnimal</td>
                    <td>@animal.DataCadastro</td>
                    <td>@Html.ActionLink("Ver Postagem", "DetalhesAnimal", "Home", new { id = animal.AnimalId }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Desbloquear", "DesbloquearAnimal", "Home", new { id = animal.AnimalId }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Bloquear", "AnimalEncontrado", "Home", new { id = animal.AnimalId }, new { @class = "btn btn-primary" })</td>
                    <td class="text-danger">Bloqueado</td>
                </tr>
             }

    }
}


    </table>
</div>